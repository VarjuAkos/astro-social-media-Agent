# Contents of the file: /ai-social-media-agent/ai-social-media-agent/.env.example

# This is an example of the environment variables needed for the application.
# Copy this file to .env and fill in the required values.

# Groq API Configuration (Required)
GROQ_API_KEY=your_groq_api_key_here

# Model Configuration (optional)
MODEL_NAME=llama-3.3-70b-versatile
TEMPERATURE=0.7
MAX_TOKENS=1500

# API keys and tokens (optional - for future social media integrations)
FACEBOOK_API_KEY=your_facebook_api_key
INSTAGRAM_API_KEY=your_instagram_api_key
LINKEDIN_API_KEY=your_linkedin_api_key
X_API_KEY=your_x_api_key

# Other configuration settings
DATABASE_URL=your_database_url
SECRET_KEY=your_secret_key
DEBUG=True  # Set to False in production
PORT=8501